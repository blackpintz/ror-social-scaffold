<section class="user-section">
  <h2><%= "Name: #{@user.name}." %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
  <section>
    <h3>Friend Requests:</h3>
    <% @friend_requests.each do |friend| %>
    <p><%= friend.user.name %> wants to be your friend.</p>
    
    <% end %>
  </section>
</section>
